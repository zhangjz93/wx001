/* pages/modaltest/modaltest.wxss */

.all{
  width: 200rpx;
  height: 100rpx;
  border:1px black solid;
}

.modal-container {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background-color: grey;
  opacity: 0.8;
  z-index: 100;
}

.modal-content {
  background-color: white;
  width: 300rpx;
  height: 600rpx;
  position: absolute;
  left: 0; 
  right: 0; 
  margin-left: auto; 
  margin-right: auto; 
  padding: 10rpx;
  top: 200rpx;
  border-radius: 20rpx;
  z-index: 999;
}