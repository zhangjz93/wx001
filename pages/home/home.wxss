/* pages/home/home.wxss */
.swiper-box {
  padding: 20rpx;
}

.swiper-box swiper {
  height: 320rpx;
  width: 100%;
}

.swiper-box swiper image {
  width: 100%;
  height: 100%;
}

.middle-navi-box {
  display: flex;
  justify-content: center;
  align-items: center;
}

.middle-navi-box .middle-navi-item {
  padding: 15rpx;
  border: 1px #eee solid;
  margin-right: 25rpx; 
  font-size: 32rpx;
  border-radius: 20rpx;
}

.middle-navi-box .active {
  color: #ff4d00;
}

.product-item {
  display: flex;
  padding: 25rpx;
  border-bottom: 1px #eee solid;
}

.product-item-left {
  height: 200rpx;
  width: 200rpx;
}

.product-item-right {
  margin-left: 20rpx;
  height: 200rpx;
  width: 500rpx;
}

.product-item-left image {
  height: 100%;
  width: 100%;
}

